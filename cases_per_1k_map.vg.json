{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json", "title": "Total Confirmed COVID-19 Cases per 100000 population in Malaysia (30 Sept 2021)",
  "width": "container",
  "height": 600,
  "projection": {"type": "equirectangular"},
  "data": {
      "url": "malaysia-state.topojson.json",
      "format": {"type": "topojson", "feature": "states"}
    },
    "transform": [
      {
        "lookup": "properties.Name",
        "from": {
          "data": {"url": "./clean_data/clean_total_cases_state.csv"},
          "key": "state",
          "fields": ["total", "pop"]
        }
      },
    {"calculate": "datum.total/datum.pop * 100000", "as": "Confirmed Cases per 100000 population"}
  ],
  "mark": {"type": "geoshape","stroke":"grey"},
  "encoding": {
    "color": {
      "field": "Confirmed Cases per 100000 population",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain":[1000, 3000, 5000, 7000, 9000],
        "range": ["#ffffb2", "#fed976", "#fd8d3c", "#fc4e2a", "#b10026"]
        },
        "legend":{"title":"Cases per 100000 population"} 
      },
      "tooltip": [
        {"field": "properties.Name", "type": "nominal", "title": "State"},
        {"field": "Confirmed Cases per 100000 population", "type": "quantitative", "format": ".2f"} ]
    },
    "config": {
      "view": {"strokeOpacity": 0, "stroke": "black"},
      "background":"#cccccc",
      "legend": {"orient": "bottom-right", "direction": "horizontal"}
    }   
}